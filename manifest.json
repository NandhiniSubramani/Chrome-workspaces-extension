{
  "manifest_version": 2,
  "name": "My Workspace",
  "version": "1.0",
  "description": "Save tabs into a workspace for later.",
  "permissions": ["storage", "tabs"],
  "options_page": "src/pages/options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "My Workspace",
    "default_popup": "src/controller.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  }
}
